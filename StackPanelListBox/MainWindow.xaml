<Window x:Class="StackPanelListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPanelListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="20">Hello world</TextBlock>
            <ListBox Height="100" Width="100">
                <ListBoxItem Content="Item 1" />
                <ListBoxItem Content="Item 2" />
                <ListBoxItem Content="Item 3" />
            </ListBox>

            <Button Content="Click me" Margin="20" Width="100" Click="Button_Click"></Button>
            <Button Content="Mouse Up Event" Margin="20" Width="100" MouseUp="Button_MouseUp"></Button>
            <Button Content="Preview Mouse Up Event" Margin="10" Width="200" PreviewMouseUp="Button_PreviewMouseUpEvent"></Button>
        </StackPanel>
    </Grid>
</Window>
