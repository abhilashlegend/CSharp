<Window x:Class="WPFRadioImg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFRadioImg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold" FontSize="20">Do you like me?</Label>
        <RadioButton Margin="5" Checked="YesChecked">
            <WrapPanel>
                <Rectangle Fill="Green" Width="16" Height="16" />
                <TextBlock Text="Yes" Foreground="Green" Margin="5,0,0,0"></TextBlock>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Checked="NoChecked">
            <WrapPanel>
                <Rectangle Fill="Red" Width="16" Height="16" />
                <TextBlock Text="No" Foreground="red" Margin="5,0,0,0"></TextBlock>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Checked="MayBeChecked" Name="rbMaybe">
            <WrapPanel>
                <Rectangle Fill="Yellow" Width="16" Height="16" />
                <TextBlock Text="Maybe" Foreground="Black" Margin="5,0,0,0"></TextBlock>
            </WrapPanel>
        </RadioButton>
    </StackPanel>
</Window>
